<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="bk.myapp.NotificationReceiver">
	
	<ru.rambler.libs.swipe_layout.SwipeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/swipe_layout"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_margin="20dp">
		
		<!--CENTER. app:gravity="center" - is default value -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.3"
				android:background="@drawable/tv_stroke"
				android:gravity="center"
				android:padding="10dp"
				android:text="@string/_2_1_km"
				android:textColor="#000"
				android:textSize="15dp"
				android:textStyle="bold"/>
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/tv_grad"
				android:gravity="center"
				android:text="VIT University Vellore"
				android:textColor="#fff"
				android:textSize="20dp"
				android:textStyle="bold"/>
		</LinearLayout>
		
		<!--RIGHT-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			app:bring_to_clamp="150dp"
			app:clamp="self"
			android:background="@drawable/tv_stroke"
			app:gravity="left"
			app:sticky="100dp">
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.5"
				android:orientation="vertical">
				
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="0.75"
					android:src="@mipmap/car"/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="0.25"
					android:gravity="center"
					android:text="Vehicle"/>
			
			</LinearLayout>
			<View
				android:layout_width="3dp"
				android:layout_height="match_parent"
				android:background="#693fbe"/>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.5"
				android:orientation="vertical">
				
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:padding="5dp"
					android:layout_weight="0.75"
					android:src="@drawable/bgplus"/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:gravity="center"
					android:layout_weight="0.25"
					android:text="First Aid"/>
			
			</LinearLayout>
		</LinearLayout>
		
		<!--LEFT-->
		<FrameLayout
			android:layout_width="200dp"
			android:layout_height="match_parent"
			app:bring_to_clamp="100dp"
			app:clamp="self"
			app:gravity="right"
			app:sticky="none">
		
		</FrameLayout>
	</ru.rambler.libs.swipe_layout.SwipeLayout>
</LinearLayout>
